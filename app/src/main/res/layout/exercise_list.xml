<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textView1"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="TextView"
        android:visibility="visible"
         />
    <TextView
        android:id="@+id/ltextView2"
        android:layout_below="@+id/textView1"
        android:textColor="@color/navy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:text="Duration:"
        android:textStyle="bold"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/textdur"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="duration"
        android:visibility="gone"
        android:layout_toRightOf="@+id/ltextView2"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:id="@+id/ltextView3"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ltextView2"
        android:layout_width="wrap_content"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Repetition:"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/textrep"
        android:layout_toRightOf="@+id/ltextView3"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/ltextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="rep"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/ltextView4"
        android:layout_marginLeft="5dp"

        android:layout_below="@+id/ltextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="14dp"
        android:text="Sets:"
        />
    <TextView
        android:id="@+id/textsets"
        android:layout_toRightOf="@+id/ltextView4"
        android:layout_below="@+id/ltextView3"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_marginLeft="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="set"
        />
    <TextView
        android:id="@+id/ltextView5"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/ltextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="14dp"
        android:text="Frequency:"
        />
    <TextView
        android:id="@+id/textfrq"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/ltextView4"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/ltextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="freq"
        android:visibility="gone"
        />
</RelativeLayout>
</LinearLayout>