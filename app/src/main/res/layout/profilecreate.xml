<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/custom_paig_dark"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/pname_label"
                android:text="Name"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <EditText
            android:id="@+id/pname"
            android:layout_below="@+id/lay1"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:hint="Enter your name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/lay2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/custom_paig_dark"
            android:layout_below="@+id/pname"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/page_label"
                android:text="Age"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
         <EditText
            android:id="@+id/page"
            android:layout_marginLeft="10dp"
            android:hint="Enter your age"
            android:paddingTop="10dp"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay2" />


        <RelativeLayout
            android:id="@+id/lay5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/custom_paig_dark"
            android:layout_below="@+id/page"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/pgender_label"
                android:text="Gender"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RadioGroup android:id="@+id/radiog"
            android:layout_below="@id/lay5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10.0dip"
            android:layout_marginBottom="5dp"
            android:paddingLeft="4.0dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiom"
                android:layout_width="175dp"
                android:checked="true"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#000000"/>

            <RadioButton
                android:id="@+id/radiof"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Female"
                android:textColor="#000000"/>

        </RadioGroup>


        <RelativeLayout
            android:id="@+id/lay3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/custom_paig_dark"
            android:layout_below="@+id/radiog"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
    <TextView
        android:id="@+id/psurgerydate_label"
        android:text="Surgery Date"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
        </RelativeLayout>
        <TextView
        android:id="@+id/psurgerydate"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="16dp"
        android:onClick="onClick"
        android:clickable="true"
        android:text="Today"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3" />


        <RelativeLayout
            android:id="@+id/lay4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/custom_paig_dark"
            android:layout_below="@+id/psurgerydate"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
    <TextView
        android:id="@+id/psurgerytype_label"
        android:text="Graft Site"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
        <RadioGroup android:id="@+id/radiola"
        android:layout_below="@id/lay4"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10.0dip"
        android:paddingLeft="4.0dip"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioa"
            android:layout_width="175dp"
            android:checked="true"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="@string/surgery_type_a_label"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/radiob"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="@string/surgery_type_b_label"
            android:textColor="#000000"/>

    </RadioGroup>

        <RelativeLayout
            android:id="@+id/lay6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttondone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Done"
                    android:textSize="15dp"
                    android:background="@drawable/flat_selector"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/buttoncancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/flat_selector"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text="Cancel"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
